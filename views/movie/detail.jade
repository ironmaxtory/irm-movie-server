extends ../layout

block content
  h1= title
  p Welcome to #{title}

  div.container.flex
    div.flex-item-4.movie-preview
      div.img-cntr
        img(src="#{movie.poster}", alt="#{movie.title}")
    div.flex-item-6.movie-info
      dl.flex.list
        dt 电影ID
        dd= movie._id
        dt 电影名字
        dd= movie.title
        dt 导演
        dd= movie.director
        dt 国家
        dd= movie.country
        dt 语言
        dd= movie.language
        dt 上映年份
        dd= movie.year
        dt 简介
        dd= movie.summary
  
